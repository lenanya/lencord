<FilePicker@Popup>:
    title: "Pick a file to upload"
    size_hint: 0.75, 0.75
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        FileChooserIconView:
            filters: ['*.png', '*.jpg', '*.jpeg']
            #oops forgot that here
            #path: "C:/users/lena/Pictures" 
            multiselect: False
            id: fileChooser
        Button:
            size_hint_y: 0.25
            text: fileChooser.selection and fileChooser.selection[0] or "Choose an image"
            on_press:
                app.channelScreen.attachment = fileChooser.selection[0]
                app.channelScreen.ids.attach.text = fileChooser.selection[0]
                root.dismiss()
# i fucking LOVE boxlayouts

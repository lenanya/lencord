<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: token
            multiline: False
            text_hint: 'Put your token here'
            password: True
            password_mask: '#'
        Button:
            on_press:
                app.token = token.text
                app.getReady()
                app.sm.current = 'dmlist'
            text: 'Login'
        Button:
            on_press:
                app.get_token_from_file()
                app.getReady()
                app.sm.current = 'dmlist'
            text: 'Login with token file'